{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
